<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="300dp"
    android:layout_height="150dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@color/colorTangerine"
    android:id="@+id/setting_timer_popup_id"
    >
    <EditText
        android:id="@+id/set_hour_tv"
        android:layout_width="80dp"
        android:gravity="center"
        android:hint="00"
        android:textSize="50dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="50dp"/>
    <EditText
        android:id="@+id/set_minute_tv"
        android:layout_width="80dp"
        android:gravity="center"
        android:hint="00"
        android:textSize="50dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="50dp"/>
    <EditText
        android:id="@+id/set_second_tv"
        android:layout_width="80dp"
        android:gravity="center"
        android:hint="00"
        android:textSize="50dp"
        android:layout_height="wrap_content"/>

</LinearLayout>